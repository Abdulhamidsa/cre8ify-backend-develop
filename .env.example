# --- DATABASE CONNECTIONS ---

# Replace with your local or cloud connection strings
MONGO_CONNECTION_STRING=mongodb://localhost:27017/dev_db
POSTGRES_CONNECTION_STRING=postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>

# --- ENVIRONMENT CONFIG ---
NODE_ENV=development
PORT=4000

# --- JWT SECRETS ---
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# --- TOKEN EXPIRATIONS ---
ACCESSTOKEN_EXPIRATION=30m
REFRESHTOKEN_EXPIRATION=7d
ACCESSTOKEN_MAXAGE=1800000 # 30 minutes in ms
REFRESHTOKEN_MAXAGE=604800000 # 7 days in ms

# --- CORS ---
REACT_APP_CORS_ORIGIN=http://localhost:5173
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3001

# --- OPTIONAL: CLOUDINARY CONFIG (used for file/image uploads) ---
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_PROJECT_IMAGES_FOLDER=projects/images
CLOUDINARY_PROJECT_THUMBNAILS_FOLDER=projects/thumbnails

# --- OPTIONAL: OPENAI & GEMINI KEYS (used for AI features) ---
OPENAI_API_KEY=your_openai_key
GEMINI_API_KEY=your_gemini_key

# --- DATABASE POOLING ---
DB_POOL_MIN=1
DB_POOL_MAX=5

# --- LOGGING ---
LOG_LEVEL=debug

# --- COOKIES ---
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# --- RATE LIMITING ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=500
